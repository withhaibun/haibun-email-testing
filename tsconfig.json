{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "esnext",
    "module": "NodeNext",
    "lib": [
      "es2020", "ESNext", "DOM"
    ],
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true, // This allows importing JSON modules
    "isolatedModules": true // This helps to interop between modules
  },
  "include": [
    "./src/**/*",
    "./customTypings/mailauth.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
